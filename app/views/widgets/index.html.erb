<div class="container">
    <h1 class="jumbotron text-center">Wacky Widgets</h1>
<br />

<% def wacky_widgets %>
    <% if @widgets.count === 0 %>
       <h3 class="text-center">No Widgets Exist</h3>
    <% else %>
    <table>
    <tr>
        <th>Description</th>
        <th>Quantity</th>
        <th>Remove</th>
    </tr>
    <tbody>
        <% @widgets.each do |w| %>
            <tr>
                <td><%= w.description %></td>
                <td><%= w.quantity %></td>
                <td><%= link_to "X", widget_path(w), method: :delete, class: "btn btn-xs btn-danger" %></td> 
            </tr>
    <% end %>
    </tbody>
</table>
    <% end %>
<% end %>
<% wacky_widgets %>

<div class="row">
    <div class="col"
        <hr>
        <h4>Add a New Widget:</h4>
    </div>
    <%= form_for @widget do |w| %>
        <div class="form-group">
                <%= w.label :description %>
                <%= w.text_field :description, { :class => "form-control"} %>
            </div>
            <div class="form-group">
                <%= w.label :quantity %>
                <%= w.number_field :quantity, { :class => "form-control"}%>
            </div>
        <%= w.submit "Add Widget", class: "btn btn-success" %>
    <% end %>
</div>